<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/project"
    tools:context=".seven">

    <ImageView
        android:id="@+id/fly"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/p3"
        android:layout_marginBottom="-100dp"
        android:src="@drawable/pack" />

    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="234dp"
        android:background="@drawable/about">

        <TextView
            android:id="@+id/achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:text="PLATFORMS"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="207dp"
        android:background="@drawable/b1">

        <ImageView
            android:id="@+id/pn1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/git" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="270dp"
        android:background="@drawable/b1">


        <ImageView
            android:id="@+id/pn2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/hack" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/b1">

        <ImageView
            android:id="@+id/pn3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/p3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/code" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/p4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/b1">


        <ImageView
            android:id="@+id/pn4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:src="@drawable/in" />
    </RelativeLayout>

    <Button
        android:id="@+id/next5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/c_button"
        android:text="Next"
        android:textColor="#ffffff" />

</RelativeLayout>

